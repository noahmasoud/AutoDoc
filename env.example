# AutoDoc Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=AutoDoc
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///./autodoc.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# =============================================================================
# External Services (Optional - read from environment only)
# =============================================================================
# Confluence
CONFLUENCE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your-username
CONFLUENCE_TOKEN=your-api-token
CONFLUENCE_SPACE_KEY=YOUR_SPACE
CONFLUENCE_PAGE_PREFIX=AutoDoc
CONFLUENCE_TIMEOUT=30
CONFLUENCE_MAX_RETRIES=3

# =============================================================================
# Security (REQUIRED - MUST be provided via environment)
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-must-be-32-chars-minimum
JWT_SECRET_KEY=your-jwt-secret-key-here-must-be-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# File Storage
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=py,js,ts,md,txt

# =============================================================================
# Monitoring and Logging
# =============================================================================
SENTRY_DSN=
LOG_FILE=./logs/autodoc.log
LOG_FORMAT=json

# =============================================================================
# Development Tools
# =============================================================================
# Testing
TEST_DATABASE_URL=postgresql://autodoc:autodoc@localhost:5432/autodoc_test
PYTEST_TIMEOUT=300
COVERAGE_THRESHOLD=70

# Linting
RUFF_CONFIG=.ruff.toml
MYPY_CONFIG=mypy.ini

# =============================================================================
# Docker Configuration
# =============================================================================
COMPOSE_PROJECT_NAME=autodoc
COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml

# =============================================================================
# CI/CD Configuration
# =============================================================================
CI=false
GITHUB_ACTIONS=false
GITLAB_CI=false
