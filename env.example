# AutoDoc Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME=AutoDoc
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://autodoc:autodoc@localhost:5432/autodoc_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=autodoc_dev
DB_USER=autodoc
DB_PASSWORD=autodoc

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# =============================================================================
# External Services
# =============================================================================
# Confluence
CONFLUENCE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your-username
CONFLUENCE_TOKEN=your-api-token
CONFLUENCE_SPACE=YOUR_SPACE

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# File Storage
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=py,js,ts,md,txt

# =============================================================================
# Monitoring and Logging
# =============================================================================
SENTRY_DSN=
LOG_FILE=./logs/autodoc.log
LOG_FORMAT=json

# =============================================================================
# Development Tools
# =============================================================================
# Testing
TEST_DATABASE_URL=postgresql://autodoc:autodoc@localhost:5432/autodoc_test
PYTEST_TIMEOUT=300
COVERAGE_THRESHOLD=70

# Linting
RUFF_CONFIG=.ruff.toml
MYPY_CONFIG=mypy.ini

# =============================================================================
# Docker Configuration
# =============================================================================
COMPOSE_PROJECT_NAME=autodoc
COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml

# =============================================================================
# CI/CD Configuration
# =============================================================================
CI=false
GITHUB_ACTIONS=false
GITLAB_CI=false
